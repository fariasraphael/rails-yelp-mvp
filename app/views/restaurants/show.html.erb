<h1><%= @restaurant.name %></h1>


<h2> <%=link_to "Add review", new_restaurant_review_path(@restaurant) %></h2>
<h2> <%=link_to "Edit", edit_restaurant_path(@restaurant) %></h2>
<h2> <%=link_to "Back to restaurants", restaurants_path %></h2>
<h2> <%= link_to "Delete", restaurant_path(@restaurant), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%></h2>

<h3>Reviews</h3>
<ul>
  <% @restaurant.reviews.each do |review| %>
  <li>
    <%= review.content %>
    <%= link_to "Remove", review_path(review), data: { turbo_method: :delete, turbo_confirm: 'Are you shure? '} %>
  </li>
  <% end %>
</ul>
